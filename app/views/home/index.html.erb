<%= render(Marketing::HeroComponent.new(user: current_user)) %>

<div class="bg-white pt-16 pb-20 px-4 sm:px-6 lg:pt-24 lg:pb-28 lg:px-8">
  <div class="relative max-w-lg mx-auto divide-y-2 divide-gray-200 lg:max-w-7xl">
    <div>
      <h2 class="text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl">Latest Comics</h2>
    <div class="py-10 border-t text-center">
        <div class="flex flex-wrap justify-center">
        <% @records.each do |product| %>
          <% cache product do %>
            <%= render 'projects/product_card', product: product %>
          <% end %>
        <% end %>
        </div>
    </div>
    <div class="mt-12 w-full">
      <%== pagy_nav(@pagy) %>
    </div>
  </div>
</div>