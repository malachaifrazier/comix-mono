<%= form_with model: @post, url: admin_post_path(@post), method: :patch, local: true do |form| %>
  <%= form.label :title %><br />
  <%= form.text_field :title %>
  <%= form.label :summary %><br />
  <%= form.rich_text_area :summary %>
  <%= form.label :body %><br />
  <%= form.rich_text_area :body %>
  <%= form.submit %>
<% end %>