<div class="my-1 px-1 lg:my-2 lg:px-1 lg:w-1/4 md:w-1/2 sm:w-full list-none cursor-pointer">
    <article class="overflow-hidden rounded-lg border hover:shadow-lg">
        <% if @product.issue_cover.present? %>
            <%= image_tag @product.issue_cover, class: "block max-h-tile w-full" %>
        <% else %>
            <%= image_tag "https://res.cloudinary.com/drg9hguhu/image/upload/v1667569457/comix/78_tage_auf_der_stra%C3%9Fe_des_hasses_000_cover.jpg", class: "block max-h-tile w-full" %>
        <% end %>

        <header class="flex items-center justify-between leading-tight p-2 md:p-4">
            <h1 class="text-lg text-left w-2/3"  title="Grill & Red">
                <%= @product.name.truncate(20) %>
            </h1>
            <p class="text-grey-darker text-sm border border-dashed border-black rounded p-2 w-1/3 text-center">
                &#36; <%= @product.price %>
            </p>
        </header>
        <footer class="flex items-stretch justify-between leading-none p-2 md:p-4">
            <%= link_to store_path(@product.store), class: "flex items-center no-underline hover:underline text-black" do %>
                <% if @product.store.display_image.present? %>
                    <%= image_tag @product.store.display_image.variant(resize_to_limit: [32, 32]), class: "block rounded-lg" %>
                <% else %>
                    <img src="https://img.icons8.com/dotty/32/000000/full-image.png" width="32" height="32"/>
                <% end %>
                <span class="ml-2 text-sm" title="<%= @product.store.name %>">
                    <%= @product.store.name.truncate(15, omission: '..') %>
                </span>
            <% end %>
        </footer>
    </article>
</div>